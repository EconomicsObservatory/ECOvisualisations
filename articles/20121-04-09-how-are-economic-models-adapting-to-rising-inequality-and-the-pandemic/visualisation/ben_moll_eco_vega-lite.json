            "mark": {
                "type": "area",
                "color": {
                    "expr": "eco_blue"
                },
                "opacity": 0.15
            },
            "encoding": {
                "x": {
                    "type": "quantitative",
                    "axis": {
                        "tickCount": 9,
                        "title": "Deaths (% of Population)",
                        "format": ".2f",
                        "grid": false
                    },
                    "field": "death %",
                    "sort": []
                },
                "y": {
                    "type": "quantitative",
                    "axis": {
                        "tickCount": 5,
                        "title": "Economic Welfare Cost (months of Income)",
                        "domain": false,
                        "ticks": false,
                        "labelAlign": "left",
                        "labelBaseline": "middle",
                        "labelPadding": -5,
                        "labelOffset": -10,
                        "titleX": 25,
                        "titleY": -5,
                        "titleAngle": 0,
                        "titleAlign": "left"
                    },
                    "field": "p90"
                },
                "y2": {
                    "field": "p10"
                }
            }
        },
        {
            "name": "red-line",
            "mark": {
                "type": "line",
                "stroke": {
                    "expr": "eco_blue"
                }
            },
            "encoding": {
                "x": {
                    "type": "quantitative",
                    "field": "death %",
                    "sort": []
                },
                "y": {
                    "type": "quantitative",
                    "field": "mean"
                }
            }
        },
        {
            "name": "red-dots",
            "mark": {
                "type": "point",
                "fill": {
                    "expr": "eco_blue"
                },
                "stroke": {
                    "expr": "eco_blue"
                },
                "opacity": 0.9
            },
            "encoding": {
                "x": {
                    "type": "quantitative",
                    "field": "death %",
                    "sort": []
                },
                "y": {
                    "type": "quantitative",
                    "field": "mean"
                },
                "strokeWidth": {
                    "condition": {
                        "test": "((datum.mean>6)&(datum.mean<6.5))||(datum.mean>6.8)||((datum.mean>2.4)&(datum.mean<2.5))",
                        "value": 1
                    },
                    "value": 0
                },
                "size": {
                    "condition": {
                        "test": "((datum.mean>6)&(datum.mean<6.5))||(datum.mean>6.8)||((datum.mean>2.4)&(datum.mean<2.5))",
                        "value": 70
                    },
                    "value": 0
                },
                "fill": {
                    "type": "nominal",
                    "field": "Fiscal support"
                }
            }
        },
        {
            "layer": [{
                    "name": "blue-area",
                    "mark": {
                        "type": "area",
                        "color": {
                            "expr": "eco_pink"
                        },
                        "opacity": 0.15
                    },
                    "encoding": {
                        "x": {
                            "type": "quantitative",
                            "field": "death %",
                            "sort": []
                        },
                        "y": {
                            "type": "quantitative",
                            "field": "p90"
                        },
                        "y2": {
                            "field": "p10"
                        }
                    }
                },
                {
                    "name": "blue-line",
                    "mark": {
                        "type": "line",
                        "stroke": {
                            "expr": "eco_pink"
                        }
                    },
                    "encoding": {
                        "x": {
                            "type": "quantitative",
                            "field": "death %",
                            "sort": []
                        },
                        "y": {
                            "type": "quantitative",
                            "field": "mean"
                        }
                    }
                },
                {
                    "name": "blue-point",
                    "mark": {
                        "type": "point",
                        "fill": {
                            "expr": "eco_pink"
                        },
                        "stroke": {
                            "expr": "eco_pink"
                        }
                    },
                    "encoding": {
                        "x": {
                            "type": "quantitative",
                            "field": "death %",
                            "sort": []
                        },
                        "y": {
                            "type": "quantitative",
                            "field": "mean"
                        },
                        "shape": {
                            "type": "nominal",
                            "field": "Fiscal support"
                        },
                        "size": {
                            "condition": {
                                "test": "((datum.mean>6)&(datum.mean<7))||(datum.mean<2.5)||(datum.mean>7.5)||((datum.mean>3.2)&(datum.mean<3.4))",
                                "value": 70
                            },
                            "value": 0
                        }
                    }
                }
            ],
            "data": {
                "url": "https://raw.githubusercontent.com/csaladenes/eco/main/ben_moll/fig1_nofiscalsupport.csv"
            },
            "transform": [{
                    "calculate": "1",
                    "as": "cat"
                },
                {
                    "calculate": "'Mean (No Fiscal Support)'",
                    "as": "Fiscal support"
                },
                {
                    "filter": "datum.cat>fiscal"
                }
            ]
