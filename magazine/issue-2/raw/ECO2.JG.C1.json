{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Carbon per capita by country",

"title": {
    "text": "GDP per capita - by country",
    "subtitle":"$ in current prices. Source: World Bank, OECD",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },

  "data": {
    "url": "https://raw.githubusercontent.com/RDeconomist/RDeconomist.github.io/main/data/ECO2.JGb.C1.csv"
  },
  "height": 300,
  "width": 400,
  "mark": "line",
  "encoding": {
    "x": {"field": "Year", "type": "temporal", "title": "", "axis": {"grid": false}},
    "y": {
      "field": "Value",
      "type": "quantitative",
      "title": "",
      "axis": {"grid": false},
      "sort": []
   
    },
    "color": {
      "field": "Country",
      "title": null,
      "legend": {"orient": "top-left"},
      "type": "nominal",
      "sort": [],
      "scale": {"scheme": "yellowgreenblue"}
    },
    "tooltip": [
      {"field": "Country"},
      {"field": "Year", "type": "temporal", "timeUnit": "year", "title": "Year"},
      {"field": "Value", "type": "quantitative", "title": "GDP per capita ($)"}
      
    ]
  }
}