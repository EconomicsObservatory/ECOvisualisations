{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "Real price of tampons (UK)",
  "height": 400,
  "width": 400,
  "autosize": {"type": "fit", "contains": "padding"},

"title": {
    "text": "CO2 Emissions",
    "subtitle":"Million tonnes. Source: Authors' calculations",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },


  "data": {
    "url": "https://raw.githubusercontent.com/RDeconomist/RDeconomist.github.io/main/data/ECO2.TENREYO.C2.csv"
  },
  "layer": [
    {
      "mark": {"type": "line"},
      "encoding": {
        "x": {"field": "Year", "type": "temporal", "title": "Year", "axis": {"grid": false}},
        "y": {
          "field": "Value1",
          "type": "quantitative",
          "axis": {"grid": false},
          "title": null
        },
        
    "color": {
      "field": "Region",
      "title": null,
      "legend": {"orient": "top-left"},
      "type": "nominal",
      "sort": [],
      "scale": {"scheme": "yellowgreenblue"}
    }
      }
    },
    {
      "mark": {"type": "rule", "color": "#e54753", "size": 2},
      "encoding": {"x": {"field": "Lines", "type": "temporal"}},
      "data": {
        "values": [
          {"Lines": "1997-01-01"},
          {"Lines": "2009-01-01"},
          {"Lines": "2015-01-01"}
          
        ],
        "format": {"parse": {"Date": "utc:'%d %b %Y'"}}
      }
    }
  ]
}